  "engines": {
    "node": "^12.18",
    "npm": "^6.14"
  },
  "directories": {
    "example": "examples",
    "doc": "doc"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "alasql": "^1.7.3",
    "cron": "^1.8.2",
    "dataframe": "^2.0",
    "marked": "^3.0",
    "pg": "^8.7.1",
    "pouchdb-adapter-http": "^7.2.2",
    "pouchdb-adapter-idb": "^7.2.2",
    "pouchdb-adapter-memory": "^7.2.2",
    "pouchdb-core": "^7.2.2",
    "pouchdb-debug": "7.2",
    "pouchdb-find": "^7.2.2",
    "pouchdb-mapreduce": "^7.2.2",
    "pouchdb-replication": "^7.2.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {

  },
  "peerDependecies": {
    "rc-cascader": "^1.5.0",
    "react": "^16.14",
    "react-dom": "^16.14",
    "react-draggable": "^4.4.4",
    "superlogin-client": "^0.8.0"
  },
  "scripts": {
    "build:core": "node ./packages/metadata-core/build.js",
    "build:ui": "cd ./packages/metadata-ui/ && cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ./babel.config.js ./src --out-dir . && node ./copy-files && cd ../../ && node ./packages/metadata-ui/build.js",
    "build:adapter-pouchdb": "node ./packages/metadata-pouchdb/build.js",
    "build:adapter-postgres": "node ./packages/metadata-postgres/build.js",
    "build:docs": "yuidoc -c doc/yuidoc.json src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oknosoft/metadata.js.git"
